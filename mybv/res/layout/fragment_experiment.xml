<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150">
        <com.bilibili.tv.widget.DrawFrameLayout
            android:id="@id/filter_button"
            android:background="@drawable/shape_rectangle_trans_with_12corner_white_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusRight="@id/experiment_folder_open"
            android:layout_width="@dimen/px_350"
            android:layout_height="@dimen/px_96"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30">
            <com.bilibili.tv.widget.ShadowTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="禁用视频过滤"
                android:textColor="@color/white"
                android:textSize="@dimen/px_44" />
        </com.bilibili.tv.widget.DrawFrameLayout>
        <com.bilibili.tv.widget.DrawEditText
            android:id="@id/filter_path"
            android:enabled="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_100"
            android:background="@drawable/ic_login_edit_background"
            android:hint="配置文件路径"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_50"
            android:textSize="@dimen/px_36"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30" />
        <FrameLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30">
            <com.bilibili.tv.widget.DrawLinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/experiment_folder_open"
                android:background="@drawable/background_white_rect"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/px_80"
                android:layout_height="@dimen/px_80">
                <ImageView
                    android:background="@drawable/ic_folder_open_180"
                    android:layout_width="@dimen/px_42"
                    android:layout_height="@dimen/px_42"
                    android:layout_marginLeft="@dimen/px_18"
                    android:layout_marginRight="@dimen/px_18"
                    android:scaleType="fitCenter" />
            </com.bilibili.tv.widget.DrawLinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150">
        <com.bilibili.tv.widget.ShadowTextView
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义CDN："
            android:textColor="@color/white"
            android:textSize="@dimen/px_44"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30" />
        <com.bilibili.tv.widget.DrawFrameLayout
            android:id="@id/cdn_button"
            android:background="@drawable/shape_rectangle_trans_with_12corner_white_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusRight="@id/cdn_value"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_96">
            <com.bilibili.tv.widget.ShadowTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史记录"
                android:textColor="@color/white"
                android:textSize="@dimen/px_44" />
        </com.bilibili.tv.widget.DrawFrameLayout>
        <com.bilibili.tv.widget.DrawEditText
            android:id="@id/cdn_value"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_100"
            android:background="@drawable/ic_login_edit_background"
            android:hint="CDN域名"
            android:imeOptions="actionDone"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_50"
            android:textSize="@dimen/px_36"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150">
        <com.bilibili.tv.widget.ShadowTextView
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频空降："
            android:textColor="@color/white"
            android:textSize="@dimen/px_44"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30" />
        <CheckBox
            android:id="@id/skip_checkbox0"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/skip_checkbox0"
            android:nextFocusRight="@id/skip_checkbox1"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_96"
            android:buttonTint="@color/white_50"
            android:text="片头"
            android:textColor="@color/white"
            android:textSize="@dimen/px_44" />
        <CheckBox
            android:id="@id/skip_checkbox1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/skip_checkbox0"
            android:nextFocusRight="@id/skip_checkbox2"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_96"
            android:buttonTint="@color/white_50"
            android:text="片尾"
            android:textColor="@color/white"
            android:textSize="@dimen/px_44" />
        <CheckBox
            android:id="@id/skip_checkbox2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/skip_checkbox1"
            android:nextFocusRight="@id/skip_checkbox2"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_96"
            android:buttonTint="@color/white_50"
            android:text="硬广"
            android:textColor="@color/white"
            android:textSize="@dimen/px_44" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150">
        <com.bilibili.tv.widget.ShadowTextView
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认渲染视图："
            android:textColor="@color/white"
            android:textSize="@dimen/px_44"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30" />
        <RadioGroup 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/view_radiogroup"
            android:orientation="horizontal">
            <RadioButton
                android:id="@id/view_radiobutton0"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/view_radiobutton0"
                android:nextFocusRight="@id/view_radiobutton1"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_96"
                android:buttonTint="@color/white_50"
                android:text="SurfaceView"
                android:textColor="@color/white"
                android:textSize="@dimen/px_44" />
            <RadioButton
                android:id="@id/view_radiobutton1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/view_radiobutton0"
                android:nextFocusRight="@id/view_radiobutton2"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_96"
                android:buttonTint="@color/white_50"
                android:text="TextureView"
                android:textColor="@color/white"
                android:textSize="@dimen/px_44" />
            <RadioButton
                android:id="@id/view_radiobutton2"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/view_radiobutton1"
                android:nextFocusRight="@id/view_radiobutton2"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_96"
                android:buttonTint="@color/white_50"
                android:text="GLView"
                android:textColor="@color/white"
                android:textSize="@dimen/px_44" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150">
        <com.bilibili.tv.widget.ShadowTextView
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义开屏壁纸："
            android:textColor="@color/white"
            android:textSize="@dimen/px_44"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30" />
        <com.bilibili.tv.widget.DrawFrameLayout
            android:id="@id/splash_button"
            android:background="@drawable/shape_rectangle_trans_with_12corner_white_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusRight="@id/splash_button"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_96">
            <com.bilibili.tv.widget.ShadowTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:textColor="@color/white"
                android:textSize="@dimen/px_44" />
        </com.bilibili.tv.widget.DrawFrameLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150">
        <com.bilibili.tv.widget.DrawFrameLayout
            android:id="@id/export_button"
            android:background="@drawable/shape_rectangle_trans_with_12corner_white_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusRight="@id/export_button"
            android:nextFocusDown="@id/export_button"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_96">
            <com.bilibili.tv.widget.ShadowTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出近期日志"
                android:textColor="@color/white"
                android:textSize="@dimen/px_44" />
        </com.bilibili.tv.widget.DrawFrameLayout>
    </LinearLayout>
</LinearLayout>